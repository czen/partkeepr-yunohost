{
    "name": "Partkeepr",
    "id": "partkeepr",
    "packaging_format": 1,
    "description": {
        "en": "Partkeepr inventory management system.",
        "fr": ""
    },
    "version": "1.0~ynh1",
    "url": "https://partkeepr.org",
    "license": "free",
    "maintainer": {
        "name": "Anton Bagliy   ",
        "email": "abagly@sfedu.ru",
        "url": ""
    },
    "requirements": {
        "yunohost": ">= 2.7.14"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "php7-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for partkeepr",
                    "fr": "Choisissez un nom de domaine pour partkeepr"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for partkeepr",
                    "fr": "Choisissez un chemin pour partkeepr"
                },
                "example": "/partkeepr",
                "default": "/partkeepr"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez l’administrateur"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": false
            },
            {
                "name": "language",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr", "en"],
                "default": "en"
            },
            {
                "name": "password",
                "type": "password",
                "ask": {
                    "en": "Set the administrator password",
                    "fr": "Définissez le mot de passe administrateur"
                },
                "help": {
                    "en": "Use the help field to add an information for the admin about this question.",
                    "fr": "Utilisez le champ aide pour ajouter une information à l'intention de l'administrateur à propos de cette question."
                },
                "example": "Choose a password"
            }
        ]
    }
}
